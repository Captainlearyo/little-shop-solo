<%= form_with model: @item, url: "/merchants/#{@item.merchant.id}/items/#{@item.id}", method: :patch, local: true do |form| %>
<%= form.label :name %>
  <%= form.text_field :name, value: @item.name %>

  <%= form.label :description %>
  <%= form.text_field :description, value: @item.description %>

  <%= form.label :unit_price %>
  <%= form.text_field :unit_price, value: @item.unit_price %>

  <%= form.hidden_field :status %>

  <%= form.submit "Submit" %>
<% end %>