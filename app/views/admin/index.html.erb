<h1>Welcome to the admin dashboard!</h1>

<%= link_to "Merchants", "/admin/merchants" %>
<%= link_to "Invoices", "/admin/invoices" %>
<%= link_to "Merchants Discounts", "/merchants/discounts" %>
<div id="top_five_customers">
<h2>Top 5 Customers</h2>
<ul>
  <% @customers.top_customers.each do |customer| %>
    <li>
      <p>Name: <%= customer.customer_name %> Successful Transactions: <%= customer.transaction_count %></p>
    </li>
  <% end %>
</ul>
</div>

<div id="incompleted_invoices">
<h2>Incompleted Invoices</h2>
<ul>
  <% @invoices_to_ship.each do |invoice| %>
    <li>
      <p>Date Created: <%= invoice.format_created_at %> - Invoice ID: <%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}" %></p>
    </li>
  <% end %>
</ul>
</div>