<h1>Welcome to the admin dashboard!</h1>

<%= link_to "Merchants", "/admin/merchants" %>
<%= link_to "Invoices", "/admin/invoices" %>

<% @customers.top_customers.each do |customer| %>
  <p>Name: <%= customer.customer_name %></p>
  <p>Successful Transactions: <%= customer.transaction_count %></p>
<% end %>

<h1>Incompleted Invoices</h1>
<% @invoices_to_ship.each do |invoice| %>
  <p>Invoice ID: <%= link_to "#{invoice.id}", "/admin/invoices/#{invoice.id}" %></p>
<% end %>